<h1>Efimerides</h1>

<table>
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Texto</th>
      <th>Categoria</th>
      <th>Foto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @efimerides.each do |efimeride| %>
    <tr>
      <td><%= efimeride.date %></td>
      <td><%= efimeride.text %></td>
      <td><%= efimeride.category_id %></td>
      <td><%= efimeride.category_id %></td>
      <td>
        <% if efimeride.image.url== nil%>
        <p>No existe imagen</p>
        
        <% else%>
        <%= image_tag(efimeride.image.url, alt: 'Image')%>

        <% end %>
      </td>

      <td><%= link_to 'Show', efimeride %></td>
      <td><%= link_to 'Edit', edit_efimeride_path(efimeride) %></td>
      <td><%= link_to 'Destroy', efimeride, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

